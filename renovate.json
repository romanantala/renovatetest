{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customDatasources": {
    "geo": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/romanantala/renovatetest/master/version_remote",
      "format": "plain",
    }
  },  
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^values$"],
      "matchStrings": ["ENV IP2_VERSION=(?<currentValue>.*?)\\n"],
      "datasourceTemplate": "custom.geo",
      "depNameTemplate": "plain",
    }
  ]
}
